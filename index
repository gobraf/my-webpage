    }
    input[type="checkbox"] {
      width: 20px;
      height: 20px;
      cursor: pointer;
    }
    label {
      margin-left: 10px;
      font-size: 18px;
      cursor: pointer;
    }
    /* Celebration animation */
    .celebrate {
      animation: tickAnimation 0.5s ease-out;
    }
    @keyframes tickAnimation {
      0% { transform: scale(1); }
      50% { transform: scale(1.5); }
      100% { transform: scale(1); }
    }
